(* -----------------------------------------------------*)
(* Grammar for the generation of triples from CSV files *)
(* Author: O. Rey                                       *)
(* Creation date: May 8 2019                            *)
(* License: GPL V3                                      *)
(* -----------------------------------------------------*)

rules
    : rule+
    ;

rule
    : column_name ';' command
    ;

command
    : 'subject1' , '|' , type EOL
    | 'subject2' , '|' , type , '|' , direction , '|' , name EOL
    | ignore
    ;

type
    : identifier
    ;

direction
    : 's'
    | 'r'
    ;

name
    : identifier
    ;

identifier
    : [a-z] , { [a-z] | [0-9] | '_' }
    ;

EOL
    : '\n'
    | '\r' , '\n'
